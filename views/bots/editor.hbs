<h3>Editing id: {{bot.id}} <a href="/bots/dashboard/{{bot.id}}">Back</a>
  <a class="btn btn-primary" onclick="save();">Save</a>
  {{> run}}</h3>
<p class="messages" style="display:none"></p>

{{> editor value=bot.code}}

<script>
  $('#runForm').on('submit', function(ev) {
    ev.preventDefault();
    $('.code').val(editor.getValue());
    this.submit();
  });

  function save() {
    $.ajax({
      type: 'POST',
      data: {code: editor.getValue(), id: "{{bot.id}}" }
    }).done(function() {
      console.log('saved');
      $('.messages').text('Successfully saved');
      $('.messages').slideDown(function() {
        setTimeout(function() {
          $('.messages').slideUp();
        }, 2000);
      });
    });
  }
</script>
