<h1>Do bot stuff</h1>

{{#if bots}}
<table class="table">
  <tr>
    <th>Name</th>
    <th>ID</th>
    <th>Owner</th>
  </tr>
  {{#each bots}}
    <tr>
      <td>{{name}}</td>
      <td><a href="/bots/{{id}}">{{id}}</a></td>
      <td><b>{{owner.username}}</b> {{owner._id}}</td>
    </tr>
  {{/each}}
</table>
{{else}}
  <h4>Looks like you don't have any bots.</h4>
  <h5>You can create a bot <a href="/bots/create">here</a></h5>
{{/if}}
